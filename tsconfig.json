{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "module": "ESNext",
    "target": "es5",
    "lib": [
      "es6",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration":true,
    "declaration": true,
    "declarationDir": "./lib",
    "sourceMap": false,
    "allowJs": true,
    "moduleResolution": "node",
    // "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    // "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types",
      "./lib/@types",
    ]
  },
  "skipLibCheck": true,
  "include": [
    "src",
  ]
}
